<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/frontend/css/main.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="wrapper">
        <div id="header">            <a id='logo' href='@Url.Action("Index", "Home", new { Culture = UICulture })' title="HTH8 s.r.o.">HTH8</a>            <ul id="main-menu" class="clearfix"> 
	            <li><span class="non-a-item">Produkty</span></li>
                @HTH.DisplayPagesMenu(ViewBag.Pages, Url, UICulture, Html)
            </ul>             @HTH.DisplayProductsMenu(ViewBag.Categories, Url, UICulture, Html, true)                        <ul id='languages' class='clearfix'>                @{ViewBag.RequestParams["Culture"] = "cs";}                <li class='cz'><a href='@Url.Action(ViewBag.RequestAction, ViewBag.RequestController, ViewBag.RequestParams)'>CZ</a></li>                @{ViewBag.RequestParams["Culture"] = "en";}                <li class='en'><a href='@Url.Action(ViewBag.RequestAction, ViewBag.RequestController, ViewBag.RequestParams)'>EN</a></li>                @{ViewBag.RequestParams["Culture"] = "de";}                <li class='de'><a href='@Url.Action(ViewBag.RequestAction, ViewBag.RequestController, ViewBag.RequestParams)'>DE</a></li>                @{ViewBag.RequestParams["Culture"] = "ru";}                <li class='ru'><a href='@Url.Action(ViewBag.RequestAction, ViewBag.RequestController, ViewBag.RequestParams)'>RU</a></li>            </ul>        </div>
        <div class="page">
            @RenderBody()
        </div>

        <div id='footer'>
            <span id="brand">Český výrobce měřicí a regulační techniky, dodavatel zařízení pro tepelné procesy</span>
            <div id='footer-top' class='clearfix'>                <a href='@Url.Action("Index", "News", new { Culture = UICulture })' class='all-news'>Všechny novinky</a>
                <div class='aventio-footer'>                    <a href='http://aventio.cz'>Aventio</a>
                    <div id="logindisplay">                        <a href="@Url.Action("Index", "Map", new { Culture = UICulture })">Mapa webu</a>                    </div>
                </div>
                <div class='hth-footer'>                    &copy; 2011 <a href="@Url.Action("Index", "Home", new { Culture = UICulture })">HTH 8 s.r.o.</a>                    <br />                    Všechna práva vyhrazena                </div>            </div>
            <div id='footer-bottom'></div>
        </div>
    </div>
</body>
</html>
