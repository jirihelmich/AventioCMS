<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/frontend/css/main.css")?110927" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Scripts/fancybox/jquery.fancybox-1.3.4.css")?110927" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Frontend/general.js")?110927" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/fancybox/jquery.fancybox-1.3.4.pack.js")?110927" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/fancybox/jquery.easing-1.3.pack.js")?110927" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/fancybox/jquery.mousewheel-3.0.4.pack.js")?110927" type="text/javascript"></script>

    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-25616195-1']);
        _gaq.push(['_setDomainName', 'hth8.com']);
        _gaq.push(['_setAllowHash', false]);
        _gaq.push(['_setAllowLinker', true]);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

    </script>
</head>
<body>
    <div id="wrapper">
        <div id="header">            <a id='logo' href='@Url.Action("Index", "Home", new { Culture = UICulture })' title="HTH8 s.r.o.">HTH8</a>            <ul id="main-menu" class="clearfix"> 
	            <li><span class="non-a-item">@HTH8.Resources.Strings.Products</span></li>
                @HTH.DisplayPagesMenuHth(ViewBag.Pages, Url, UICulture, Html)
            </ul>             @HTH.DisplayProductsMenu(ViewBag.Categories, Url, UICulture, Html, true)            @Html.Partial("Partial/Flags")

            <div id='search' class='clearfix'>                <form action='@Url.Action("Index", "Search", new { Culture = UICulture })' method='get'>
                    <input type='text' name='s' id='search-text' value="@HTH8.Resources.Strings.search" />
                    <input type='submit' id='search-button' title="@HTH8.Resources.Strings.search" />
                </form>
            </div>        </div>
        <div class="page">
            @RenderBody()
        </div>

        <div id='footer'>
            <span id="brand">@HTH8.Resources.Strings.Brand</span>
            <div id='footer-top' class='clearfix'>                <a href='@Url.Action("Index", "News", new { Culture = UICulture })' class='all-news'>@HTH8.Resources.Strings.AllNews</a>
                <div class='aventio-footer'>                    <a href='http://aventio.cz'>Aventio</a>
                    <div id="logindisplay">                        <a href="@Url.RouteUrl("Sitemap", new { Culture = UICulture, sitemap = HTH8.Resources.Strings.SitemapSeo })">@HTH8.Resources.Strings.Sitemap</a>                    </div>
                </div>
                <div class='hth-footer'>                    &copy; 2011 <a href="@Url.Action("Index", "Home", new { Culture = UICulture })">HTH 8 s.r.o.</a>                    <br />                    @HTH8.Resources.Strings.AllRights                </div>            </div>
            <div id='footer-bottom'></div>
        </div>
    </div>
</body>
</html>
